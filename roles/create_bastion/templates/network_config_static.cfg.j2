version: 2
ethernets:
  eth0:
    dhcp4: false
    # default libvirt network
    addresses: [ {{ env.ip.bastion }} ]
    gateway4: {{ env.networking.gateway }}
    nameservers:
      search: [ {{ env.install_config.base_domain }} ]
      addresses: [ {{ env.networking.dns.nameserver }},{{ env.networking.dns.forwarder }} ]